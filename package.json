{
  "private": true,
  "name": "flow2dts-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspace flow2dts-flow-types-polyfill test && yarn workspace flow2dts test",
    "start": "rimraf ./workbench/outputs && yarn workbench \"../../workbench/inputs/{index,Libraries/**/*}.js.flow\"",
    "workbench": "yarn workspace flow2dts cli --rootDir ../../workbench/inputs --outDir ../../workbench/outputs \"!../../workbench/inputs/Libraries/**/{__flowtests__,__mocks__,__tests__}/**/*.js.flow\"",
    "prettify": "prettier --write \"packages/**/*.ts\" && prettier --write \"packages/**/*.d.ts\" && prettier --write \"packages/**/*.js\"",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2"
  }
}
