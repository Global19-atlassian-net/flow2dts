{
  "private": true,
  "name": "flow2dts-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspace flow2dts-flow-types-polyfill test && yarn workspace flow2dts test",
    "start": "yarn workbench",
    "workbench": "yarn workbench:ios && yarn workbench:android",
    "workbench:_": "yarn workspace flow2dts cli --cwd ../.. --rootDir ./workbench/inputs \"./workbench/inputs/{index,Libraries/**/*}.js.flow\" \"!./workbench/inputs/Libraries/**/{__flowtests__,__mocks__,__tests__}/**/*.js.flow\" \"!./workbench/inputs/Libraries/{Inspector,JSInspector,NewAppScreen,ReactPrivate}/*.js.flow\" \"!./workbench/inputs/Libraries/Animated/AnimatedWeb.js.flow\"",
    "workbench:ios": "rimraf ./workbench/outputs/ios && yarn workbench:_ --platform ios --outDir ./workbench/outputs/ios",
    "workbench:android": "rimraf ./workbench/outputs/android && yarn workbench:_ --platform android --outDir ./workbench/outputs/android",
    "prettify": "prettier --write \"packages/**/*.ts\" && prettier --write \"packages/**/*.d.ts\" && prettier --write \"packages/**/*.js\"",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "patch-package": "^6.2.2",
    "prettier": "^2.1.2"
  }
}
