{
  "name": "flow2dts",
  "version": "0.0.1",
  "description": "Generate TypeScript ambient declaration files from Flow source.",
  "bin": "./bin/flow2dts",
  "main": "index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "ts-node ./src/cli.ts",
    "build": "tsc --pretty",
    "test": "jest",
    "type-check": "tsc --noEmit --pretty",
    "prettify": "prettier --write src/**/*.ts && prettier --write src/**/*.d.ts && prettier --write src/**/*.js",
    "postinstall": "patch-package"
  },
  "peerDependencies": {
    "@babel/plugin-syntax-flow": "^7.12.1"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "babel-plugin-tester": "^10.0.0",
    "jest": "^26.6.1",
    "patch-package": "^6.2.2",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/parser": "^7.12.5",
    "@babel/plugin-syntax-flow": "^7.12.1",
    "@babel/traverse": "^7.12.5"
  }
}
